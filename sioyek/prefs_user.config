# Use extensions
#

smooth_scroll_speed 5

new_command _add_text python -m sioyek.add_text "%{sioyek_path}" "%{local_database}" "%{shared_database}" "%{file_path}" "%{selected_rect}" "%{command_text}"
new_command _add_red_text python -m sioyek.add_text "%{sioyek_path}" "%{local_database}" "%{shared_database}" "%{file_path}" "%{selected_rect}" "%{command_text}" fontsize=5 text_color=255,0,0

# Showing full white text on black background can be irritating for the eye, we can dim the whites a little bit using the contrast option
dark_mode_contrast			0.5

single_click_selects_words 1

shared_database_path    /home/yang/.config/sioyek/shared.db

new-window 1

ruler_mode 1

search_url_g   https://www.google.com/search?q=

# enable super_fast_search introduced in 2.0
super_fast_search 1

# Normally mouse wheel zooms in on the middle of the screen, but if this is set to 1, we zoom in on the cursor
wheel_zoom_on_cursor 1

## Touchpad sensitivity
#touchpad_sensitivity 1.0

# Use double clicks to select entire words and single clicks for character-based selection
single_click_selects_words 1

startup_commands toggle_smooth_scroll_mode;toggle_horizontal_scroll_lock;toggle_visual_scroll

# for the dark color
custom_background_color    0.18 0.20 0.25
custom_text_color    1.0 1.0 1.0

